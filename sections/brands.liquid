{%- style -%}
  {%- assign logo_1 = section.settings.brand_1 -%}
  {%- assign logo_2 = section.settings.brand_2 -%}
  {%- assign logo_3 = section.settings.brand_3 -%}
  {%- assign logo_4 = section.settings.brand_4 -%}

  {%- assign logo_1_hover = section.settings.brand_1_hover -%}
  {%- assign logo_2_hover = section.settings.brand_2_hover -%}
  {%- assign logo_3_hover = section.settings.brand_3_hover -%}
  {%- assign logo_4_hover = section.settings.brand_4_hover -%}

  .logo {
    height: 36px;
    width: 190px;
    background-size: cover;
    background-position: center;
  }
  .logos_container > .one {
    background-image: url('{{ logo_1 | img_url: '190x36' }}');
  }
  .logos_container > .one:hover {
    background-image: url('{{ logo_1_hover | img_url: '190x36' }}');
    cursor: pointer;
  }
  .logos_container > .two {
    background-image: url('{{ logo_2 | img_url: '190x36' }}');
  }
  .logos_container > .two:hover {
    background-image: url('{{ logo_2_hover | img_url: '190x36' }}');
    cursor: pointer;
  }
  .logos_container > .three {
    background-image: url('{{ logo_3 | img_url: '190x36' }}');
  }
  .logos_container > .three:hover {
    background-image: url('{{ logo_3_hover | img_url: '190x36' }}');
    cursor: pointer;
  }
  .logos_container > .four {
    background-image: url('{{ logo_4 | img_url: '190x36' }}');
  }
  .logos_container > .four:hover {
    background-image: url('{{ logo_4_hover | img_url: '190x36' }}');
    cursor: pointer;
  }
{%- endstyle -%}

<div class="brands">
  <h1 class="heading">{{ section.settings.brands_section_heading }}</h1>
  <div class="logos_container">
    <div class="logo one"></div>
    <div class="logo two"></div>
    <div class="logo three"></div>
    <div class="logo four"></div>
  </div>
</div>

